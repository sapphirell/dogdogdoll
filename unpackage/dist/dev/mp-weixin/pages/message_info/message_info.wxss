.container {
  background: #f5f6f7;
  min-height: 100vh;
}
.loading-wrapper {
  padding: 40rpx 0;
  display: flex;
  justify-content: center;
}
.error-wrapper {
  padding: 80rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.error-wrapper .error-text {
  font-size: 28rpx;
  color: #ff4d4f;
  margin: 20rpx 0;
}
.error-wrapper .retry-btn {
  width: 200rpx;
  height: 70rpx;
  line-height: 70rpx;
  background: #2a6af4;
  color: white;
  font-size: 28rpx;
  border-radius: 8rpx;
  margin-top: 20rpx;
}
.content-wrapper {
  padding: 30rpx;
  box-sizing: border-box;
}
.content-wrapper .cover-image {
  width: 100%;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
  background: #f0f0f0;
  min-height: 300rpx;
}
.content-wrapper .main-content {
  background: white;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
}
.content-wrapper .main-content .header {
  margin-bottom: 32rpx;
}
.content-wrapper .main-content .header .title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  line-height: 1.4;
  margin-bottom: 16rpx;
}
.content-wrapper .main-content .header .time {
  font-size: 24rpx;
  color: #999;
  display: block;
}
.content-wrapper .main-content .message-content .message-text {
  font-size: 30rpx;
  line-height: 1.6;
  color: #666;
  white-space: pre-wrap;
}
