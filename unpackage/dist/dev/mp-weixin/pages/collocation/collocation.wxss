.uploaded_image {
  width: 100px;
  height: 100px;
  margin-right: 10px;
}
.upload_box {
  width: 100%;
  white-space: nowrap;
  overflow-x: auto;
  display: block;
  margin-top: 15px;
  padding: 10px;
  margin-left: 10px;
}
.upload_box view {
  display: inline-block;
  vertical-align: top;
}
.upload_box .upload_item {
  position: relative;
  width: 100px;
  margin-right: 10px;
  border-radius: 5px;
  overflow: hidden;
}
.upload_box .upload_item .uploaded_image {
  width: 100px;
  height: 100px;
}
.upload_box .upload_item .close_icon {
  position: absolute;
  right: 0;
  top: 0;
  width: 20px;
  height: 20px;
}
.saveCollocationDataList {
  padding-bottom: 80px;
  min-height: 300rpx;
}
.saveCollocationDataList .saveCollocationDataItem {
  position: relative;
  background: #fafafa;
  width: 90vw;
  margin: 10px auto;
}
.saveCollocationDataList .saveCollocationDataItem text {
  position: relative;
  bottom: 30px;
  margin-left: 10px;
}
.saveCollocationDataList .saveCollocationDataItem .close_icon {
  width: 20px;
  height: 20px;
  position: relative;
  top: -25px;
  right: 10px;
  margin-left: 10px;
  background: #f2f2f2;
  border-radius: 100%;
}
.footer {
  position: fixed;
  bottom: 0px;
  width: 100%;
  box-shadow: 0 0 5px rbga(0, 0, 0, 0.2);
  align-items: center;
}
.footer button {
  width: 80%;
  background-color: #78d0dd;
  color: #fff;
  font-size: 16px;
  text-align: center;
  padding: 10px;
  border-radius: 30px;
  margin-bottom: 10px;
}
.oneLine {
  border-bottom: 1px solid #dadada;
  width: calc(100vw - 50px);
  margin: 0px 25px;
  box-sizing: border-box;
}
