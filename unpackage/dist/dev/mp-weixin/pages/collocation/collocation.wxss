/* 样式保持不变，与之前相同 */
.uploaded_image {
  width: 100px;
  height: 100px;
  margin-right: 10px;
}
.upload_box {
  width: 100%;
  white-space: nowrap;
  overflow-x: auto;
  display: block;
  margin-top: 15px;
  padding: 10px;
  margin-left: 10px;
}
.upload_box view {
  display: inline-block;
  vertical-align: top;
}
.upload_box .upload_item {
  position: relative;
  width: 100px;
  margin-right: 10px;
  border-radius: 5px;
  overflow: hidden;
}
.upload_box .upload_item .uploaded_image {
  width: 100px;
  height: 100px;
}
.upload_box .upload_item .close_icon {
  position: absolute;
  right: 0;
  top: 0;
  width: 20px;
  height: 20px;
}
.saveCollocationDataList {
  padding-bottom: 80px;
  min-height: 300rpx;
}
.saveCollocationDataList .saveCollocationDataItem {
  position: relative;
  background: #fafafa;
  width: 90vw;
  margin: 10px auto;
}
.saveCollocationDataList .saveCollocationDataItem .info-tap {
  position: absolute;
  bottom: 30px;
  margin-left: 10px;
}
.saveCollocationDataList .saveCollocationDataItem .no-image {
  display: inline-block;
  width: 70px;
  height: 70px;
  bottom: 0px;
  margin-left: 0px;
  color: #fda7a7;
  font-size: 30px;
  text-align: center;
  line-height: 70px;
  font-weight: 1000;
}
.saveCollocationDataList .saveCollocationDataItem .close_icon {
  width: 20px;
  height: 20px;
  position: absolute;
  bottom: 30px;
  right: 10px;
  margin-left: 10px;
  background: #f2f2f2;
  border-radius: 100%;
}
.footer {
  position: fixed;
  bottom: 0px;
  width: 100%;
  box-shadow: 0 0 5px rbga(0, 0, 0, 0.2);
  align-items: center;
}
.footer button {
  width: 80%;
  background-color: #78d0dd;
  color: #fff;
  font-size: 16px;
  text-align: center;
  padding: 10px;
  border-radius: 30px;
  margin-bottom: 10px;
}
.oneLine {
  border-bottom: 1px solid #dadada;
  width: calc(100vw - 50px);
  margin: 0px 25px;
  box-sizing: border-box;
}
.relation-trigger {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
  margin: 20rpx;
}
.relation-trigger .placeholder {
  flex: 1;
  color: #999;
  font-size: 28rpx;
}
.relation-trigger .arrow-icon {
  width: 30rpx;
  height: 30rpx;
}
.publish-detail text {
  display: block;
  color: #888;
  margin: 20rpx 40rpx;
}
