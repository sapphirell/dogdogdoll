.container {
  position: relative;
  padding: 20rpx;
  min-height: 100vh;
  background-color: #f8f8f8;
}
.top-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 300rpx;
  border-bottom-left-radius: 50% 40%;
  border-bottom-right-radius: 50% 40%;
  z-index: 0;
}
.header {
  position: relative;
  z-index: 1;
  margin-bottom: 30rpx;
}
.header .add-btn {
  background-color: #81D8cf;
  color: #fff6e1;
  line-height: 80rpx;
  border-radius: 20rpx;
  font-size: 26rpx;
  font-weight: 1000;
  margin: 30rpx 0;
}
.header .add-btn* {
  border: none;
}
.header .add-btn::after {
  border: none !important;
}
.header .description {
  color: #888;
  font-size: 26rpx;
  line-height: 1.6;
  background-color: rgba(255, 255, 255, 0.8);
  padding: 20rpx;
  border-radius: 12rpx;
}
.collocation-list {
  position: relative;
  z-index: 1;
}
.collocation-item {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}
.collocation-item .item-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
.collocation-item .item-header .title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}
.collocation-item .item-header .type-tag {
  margin-left: 20rpx;
  padding: 4rpx 12rpx;
  background-color: #81D8cf;
  color: #fff6e1;
  border-radius: 8rpx;
  font-size: 24rpx;
}
.collocation-item .content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 30rpx;
}
.collocation-item .image-scroll {
  width: 100%;
  white-space: nowrap;
  overflow-x: auto;
  -webkit-overflow-scrolling: touch;
}
.collocation-item .image-scroll .image-wrapper {
  display: flex;
  flex-wrap: nowrap;
  padding: 10rpx 0;
}
.collocation-item .image-scroll .collocation-image {
  width: 300rpx;
  height: 300rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
  background-color: #f0f0f0;
}
.collocation-item .action-btns {
  display: flex;
  justify-content: space-between;
}
.collocation-item .action-btns button {
  flex: 1;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 28rpx;
  margin: 0 10rpx;
  border-radius: 8rpx;
}
.collocation-item .action-btns .preview-btn {
  background-color: #4a90e2;
  color: white;
}
.collocation-item .action-btns .edit-btn {
  background-color: #f0f0f0;
  color: #666;
}
.collocation-item .action-btns .delete-btn {
  background-color: #ff4d4f;
  color: white;
}
.collocation-item .divider {
  height: 2rpx;
  background-color: #eee;
  margin-top: 30rpx;
}
.action-buttons-single-row {
  display: flex;
  justify-content: space-between;
  padding: 0 20rpx 20rpx;
  margin-top: 10rpx;
  gap: 15rpx;
}
.action-buttons-single-row .btn {
  flex: 1;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 22rpx;
  border-radius: 10rpx;
  margin: 0 4rpx;
  padding: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.08);
  /* 低饱和糖果色按钮 */
}
.action-buttons-single-row .btn:active {
  opacity: 0.85;
  transform: scale(0.95);
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
}
.action-buttons-single-row .btn:after {
  border: none;
}
.action-buttons-single-row .btn.preview {
  color: #3a3a3a;
}
.action-buttons-single-row .btn.edit {
  color: #3a3a3a;
}
.action-buttons-single-row .btn.collocation {
  color: #3a3a3a;
}
.action-buttons-single-row .btn.sales {
  color: #3a3a3a;
}
.action-buttons-single-row .btn .uni-icons {
  margin-right: 6rpx;
}
.hint {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin: 16rpx 0;
  letter-spacing: 1rpx;
}
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 100rpx;
}
.empty-state .empty-img {
  width: 300rpx;
  height: 300rpx;
  opacity: 0.6;
}
.empty-state .empty-text {
  font-size: 32rpx;
  color: #999;
  margin: 30rpx 0;
}
.empty-state .empty-btn {
  width: 60%;
  background-color: #4a90e2;
  color: white;
  font-size: 30rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
}
