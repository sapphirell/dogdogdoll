.container.data-v-c32993bd {
  padding: 20rpx;
  background: linear-gradient(135deg, #f5fbff, #e6f2ff);
  min-height: 100vh;
}
/* 标签栏样式 */
.tabs.data-v-c32993bd {
  display: flex;
  margin-bottom: 20rpx;
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
  transition: all 0.3s ease;
}
.tab-item.data-v-c32993bd {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  font-size: 30rpx;
  color: #666;
  position: relative;
  transition: all 0.3s ease;
}
.tab-item.active.data-v-c32993bd {
  color: #4a90e2;
  font-weight: 500;
}
.tab-item.active.data-v-c32993bd::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60%;
  height: 6rpx;
  background: linear-gradient(90deg, #8fecff, #c1ddff);
  border-radius: 3rpx;
  transition: all 0.3s ease;
}
/* 表单容器样式 */
.form-container.data-v-c32993bd {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(143, 236, 255, 0.2);
  transition: all 0.3s ease;
}
.form-section.data-v-c32993bd {
  margin-bottom: 30rpx;
}
.form-section.data-v-c32993bd:last-child {
  margin-bottom: 0;
}
.section-title.data-v-c32993bd {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
  font-weight: 500;
}
/* 选择器样式 */
.picker.data-v-c32993bd {
  background-color: #f8f8f8;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 28rpx;
  transition: all 0.3s ease;
}
.picker-text.data-v-c32993bd {
  color: #333;
}
/* 输入框样式 */
.input-container.data-v-c32993bd {
  display: flex;
  align-items: center;
  background-color: #f8f8f8;
  border-radius: 12rpx;
  padding: 0 20rpx;
  transition: all 0.3s ease;
}
.input.data-v-c32993bd {
  flex: 1;
  height: 80rpx;
  font-size: 28rpx;
  color: #333;
  transition: all 0.3s ease;
}
.input-symbol.data-v-c32993bd {
  margin-right: 10rpx;
  color: #666;
  font-size: 28rpx;
}
/* 展示作品样式 */
.highlight-list.data-v-c32993bd {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}
.highlight-item.data-v-c32993bd {
  position: relative;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  aspect-ratio: 1;
  /* 保持正方形 */
}
.highlight-img.data-v-c32993bd {
  width: 100%;
  height: 100%;
}
.highlight-actions.data-v-c32993bd {
  position: absolute;
  bottom: 0;
  right: 0;
  padding: 10rpx;
  background-color: rgba(0, 0, 0, 0.5);
  border-top-left-radius: 16rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.add-btn.data-v-c32993bd {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #171e22;
  border-radius: 16rpx;
  aspect-ratio: 1;
  /* 保持正方形 */
  transition: all 0.3s ease;
}
.add-btn.data-v-c32993bd:active {
  background-color: #2a3a42;
}
/* 上传进度提示 */
.upload-progress.data-v-c32993bd {
  margin-top: 20rpx;
  padding: 20rpx;
  background-color: #f5f5f5;
  border-radius: 12rpx;
}
.upload-progress progress.data-v-c32993bd {
  width: 100%;
  margin-bottom: 10rpx;
}
.upload-progress text.data-v-c32993bd {
  display: block;
  text-align: center;
  font-size: 24rpx;
  color: #666;
}
/* 文本域样式 */
.textarea.data-v-c32993bd {
  width: 100%;
  height: 200rpx;
  background-color: #f8f8f8;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
  transition: all 0.3s ease;
}
/* 保存按钮样式 */
.save-btn.data-v-c32993bd {
  background: linear-gradient(135deg, #8fecff, #c1ddff);
  color: #2c3e50;
  text-align: center;
  padding: 24rpx;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: 500;
  margin-top: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(143, 236, 255, 0.3);
  transition: all 0.3s ease;
}
.save-btn.data-v-c32993bd:active {
  transform: scale(0.98);
  opacity: 0.9;
}
/* 响应式调整 */
@media (max-width: 600rpx) {
.highlight-list.data-v-c32993bd {
    grid-template-columns: repeat(2, 1fr);
}
.identity-item.data-v-c32993bd {
    flex-direction: column;
    align-items: flex-start;
}
.identity-status.data-v-c32993bd {
    margin-left: 0;
    margin-top: 10rpx;
}
}
.upload-btn.data-v-c32993bd {
  width: 200rpx;
  height: 200rpx;
  border: 2rpx dashed #ddd;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #f9f9f9;
}
.upload-btn .upload-text.data-v-c32993bd {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}
