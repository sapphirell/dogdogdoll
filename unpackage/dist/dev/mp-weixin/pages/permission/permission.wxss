.container {
  padding: 20rpx;
  min-height: 100vh;
}
.header {
  padding: 40rpx 0;
  text-align: center;
}
.header .title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}
.content {
  padding: 0 10rpx;
}
.section {
  margin-bottom: 40rpx;
}
.section .section-title {
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 20rpx;
  padding-bottom: 10rpx;
}
.permission-item {
  margin-bottom: 15rpx;
}
.permission-item .permission-text {
  font-size: 28rpx;
  color: #555;
  line-height: 1.6;
}
.important-note {
  margin-top: 40rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #e0e0e0;
}
.important-note .note-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 20rpx;
}
.contact-box {
  margin-top: 50rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #e0e0e0;
  text-align: center;
}
.contact-box .company-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 25rpx;
}
.contact-box .contact-info {
  margin-bottom: 15rpx;
}
.contact-box .contact-info .contact-text {
  font-size: 28rpx;
  color: #666;
}
