.container {
  background: #f8f9fb;
}
.container .header {
  padding: 24rpx 32rpx;
  background: #fff;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
}
.container .header .unread-count {
  font-size: 28rpx;
  color: #2a6af4;
  font-weight: 500;
  display: flex;
  align-items: center;
}
.container .header .unread-count::before {
  content: '';
  display: block;
  width: 36rpx;
  height: 36rpx;
  background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path fill="%232a6af4" d="M20 8H4v10h16zm0 2l-8 5-8-5V8l8 5 8-5zM4 6h16v12H4z"/></svg>');
  background-size: contain;
  margin-right: 12rpx;
}
.container .uni-swipe_button-group {
  border-radius: 0 24rpx 24rpx 0;
  overflow: hidden;
}
.container .message-list {
  padding: 24rpx 32rpx;
  width: 680rpx;
  height: 90vh;
}
.container .message-list .message-item {
  padding: 32rpx;
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 6rpx 24rpx rgba(0, 0, 0, 0.03);
  transition: transform 0.2s;
  display: flex;
}
.container .message-list .message-item:active {
  transform: scale(0.98);
}
.container .message-list .message-item .cover-image {
  width: 96rpx;
  height: 96rpx;
  border-radius: 16rpx;
  margin-right: 32rpx;
  flex-shrink: 0;
}
.container .message-list .message-item .content {
  width: 360rpx;
}
.container .message-list .message-item .content .title {
  font-size: 32rpx;
  color: #1a1a1a;
  font-weight: 600;
  margin-bottom: 8rpx;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
}
.container .message-list .message-item .content .msg {
  font-size: 28rpx;
  line-height: 1.4;
  color: #666;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}
.container .message-list .message-item .content .msg.unread {
  color: #ff6a00;
  position: relative;
  padding-left: 36rpx;
}
.container .message-list .message-item .content .msg.unread::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 12rpx;
  height: 12rpx;
  background: #ff6a00;
  border-radius: 50%;
}
.container .message-list .message-item .time {
  font-size: 24rpx;
  color: #999;
  position: absolute;
  right: 32rpx;
  top: 32rpx;
}
.uni-swipe-action {
  border-radius: 24rpx;
  overflow: hidden;
}
.uni-swipe-action__content {
  padding: 0 24rpx;
}
.uni-swipe-action__btn {
  width: 160rpx !important;
  font-size: 28rpx !important;
  font-weight: 500 !important;
}
.uni-swipe-action__btn[style*="background-color: #dd524d"] {
  background: #ff4458 !important;
}
.uni-swipe-action__btn[style*="background-color: #4cd964"] {
  background: #00c777 !important;
}
.uni-swipe {
  margin-bottom: 24rpx;
}
.uni-swipe-action {
  margin-bottom: 24rpx;
}
.uni-swipe-action__btn-group {
  height: calc(100% - 24rpx);
  margin-bottom: 24rpx;
}
.loading-wrapper {
  padding: 24rpx 0;
  text-align: center;
}
.loading-wrapper .loading-text {
  font-size: 24rpx;
  color: #999;
}
