.sec_container {
  display: flex;
  flex-direction: column;
  /* 每行垂直排列 */
  gap: 20rpx;
  /* 行间距 */
}
.sec_row {
  display: flex;
  /* 每行使用 Flex 布局 */
  align-items: center;
  /* 垂直居中 */
  gap: 10rpx;
  /* 图片和文字之间的间距 */
  width: 100%;
  padding: 10rpx;
  box-sizing: border-box;
}
.sec_image {
  width: 35vw;
  /* 图片固定宽度 */
  height: 45vw;
  object-fit: cover;
  /* 图片填充方式 */
  border-radius: 8rpx;
  /* 圆角 */
}
.sec_content {
  flex: 1;
  /* 文字内容占据剩余空间 */
  display: flex;
  flex-direction: column;
  gap: 5rpx;
  /* 标题和描述之间的间距 */
  max-width: 50vw;
}
.sec_title {
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
}
.sec_description {
  font-size: 24rpx;
  color: #666;
  overflow: hidden;
  height: 300rpx;
}
.month-header {
  font-weight: 1000;
  border-bottom: 1rpx dashed #dadada;
  width: 100%;
  display: block;
  padding-bottom: 10rpx;
}
.bill-item {
  margin: 20rpx 0rpx;
}

/* 新增样式 */
.type-picker {
  padding-left: 25rpx;
  font-size: 35rpx;
  color: #585858;
  font-weight: 1000;
  margin-top: 10rpx;
}
.content-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 30rpx;
  padding: 20rpx;
}
.content-grid .grid-item {
  position: relative;
  width: calc(33.33% - 22rpx);
  overflow: hidden;
  border-radius: 20rpx;
  background: #fff;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}
.content-grid .grid-item .item-image {
  width: 100%;
  height: 200rpx;
  display: block;
  margin-bottom: 10rpx;
}
.content-grid .grid-item .item-type {
  position: absolute;
  top: 0;
  left: 0;
  background: rgba(255, 118, 105, 0.65);
  color: #fff;
  padding: 5rpx 10rpx;
  border-radius: 10rpx 0 10rpx 0;
  font-size: 30rpx;
}
.content-grid .grid-item .item-info {
  padding: 5rpx 15rpx;
  display: flex;
  align-items: center;
  gap: 10rpx;
}
.content-grid .grid-item .item-info .item-price {
  font-family: "alimamashuhei";
  font-weight: 900;
  color: #ff827e;
  font-size: 35rpx;
  flex-shrink: 0;
  text-shadow: 0 0 3rpx #fff;
}
.content-grid .grid-item .item-info .item-name {
  font-family: "alimamashuhei";
  color: #39110c;
  font-size: 30rpx;
  flex-grow: 1;
  text-shadow: 0 0 3rpx #fff;
}