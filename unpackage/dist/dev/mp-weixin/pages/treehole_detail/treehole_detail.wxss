.container {
  padding: 30rpx;
  background: #fff;
}
.loading {
  text-align: center;
  padding: 40rpx;
  color: #999;
}
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}
.author-info {
  display: flex;
  align-items: center;
  flex: 1;
  overflow: hidden;
  padding-bottom: 10rpx;
}
.author-info .avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.author-info .author-name {
  font-size: 24rpx;
  font-weight: 800;
  color: #333;
  max-width: 70%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.load_more {
  background: #fff;
  color: #d6d6d6;
  font-size: 13px;
  margin-top: 15px;
}
.load_more::after {
  border: none;
}
.share-btn {
  background: none;
  padding: 0;
  margin: 0;
}
.share-btn .share-icon {
  width: 40rpx;
  height: 40rpx;
}
.share-btn::after {
  border: none;
}
.content {
  font-size: 22rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 30rpx;
}
.image-container {
  margin-bottom: 30rpx;
}
.image-container.single .image-wrapper {
  width: 100%;
  padding-bottom: 100%;
}
.image-container.double {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}
.image-container.double .image-wrapper {
  width: calc(50% - 5rpx);
  padding-bottom: 50%;
}
.image-container.multi {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}
.image-container.multi .image-wrapper {
  width: calc(33.333% - 12rpx);
  padding-bottom: 33.333%;
  position: relative;
}
.image-wrapper {
  position: relative;
  border-radius: 10rpx;
  overflow: hidden;
  background: #f5f5f5;
}
.image-item {
  position: absolute;
  width: 100%;
  height: 100%;
}
.image-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  font-size: 36rpx;
}
.time {
  font-size: 24rpx;
  color: #999;
}
.action-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 40rpx 0;
  padding: 20rpx 0;
  border-top: 1rpx solid #f5f5f5;
  border-bottom: 1rpx solid #f5f5f5;
}
.action-bar .action-group {
  display: flex;
  align-items: center;
  gap: 40rpx;
}
.action-bar .action-group .action-item {
  display: flex;
  align-items: center;
  padding: 12rpx 24rpx;
  border-radius: 40rpx;
  background: #f8f8f8;
  transition: all 0.2s;
}
.action-bar .action-group .action-item:active {
  transform: scale(0.96);
  background: #f0f0f0;
}
.action-bar .action-group .action-item .action-text {
  margin-left: 12rpx;
  font-size: 26rpx;
  color: #666;
  font-weight: 500;
}
.action-bar .time-text {
  font-size: 24rpx;
  color: #999;
  padding-right: 20rpx;
}
