.settings-container.data-v-018cdf56 {
  padding: 24rpx;
  background: #f8f8f8;
  min-height: 100vh;
}
.menu-item.data-v-018cdf56 {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  margin-bottom: 24rpx;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.04);
  transition: all 0.2s ease;
}
.menu-item.data-v-018cdf56:active {
  background: #fafafa;
  transform: scale(0.98);
}
.menu-label.data-v-018cdf56 {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}
.menu-value.data-v-018cdf56 {
  display: flex;
  align-items: center;
  gap: 16rpx;
}
.menu-value text.data-v-018cdf56 {
  font-size: 28rpx;
}
.menu-value text.active.data-v-018cdf56 {
  color: #4cbbd0;
}
.menu-value text.inactive.data-v-018cdf56 {
  color: #666;
}
.arrow-icon.data-v-018cdf56 {
  width: 36rpx;
  height: 36rpx;
  opacity: 0.6;
}
/* 注销区域优化 */
.logout-section.data-v-018cdf56 {
  margin-top: 60rpx;
  padding: 0 12rpx;
}
.logout-btn.data-v-018cdf56 {
  padding: 28rpx;
  border-radius: 16rpx;
  text-align: center;
  transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.12);
  position: relative;
  overflow: hidden;
}
.logout-btn text.data-v-018cdf56 {
  color: #fff;
}
.logout-btn.data-v-018cdf56::after {
  content: '';
  position: absolute;
  top: -50%;
  left: -60%;
  width: 40rpx;
  height: 200%;
  background: rgba(255, 255, 255, 0.3);
  transform: rotate(25deg);
  transition: all 0.6s;
}
.logout-btn.data-v-018cdf56:active {
  transform: scale(0.96);
}
.logout-btn.data-v-018cdf56:active::after {
  left: 120%;
}
.btn-text.data-v-018cdf56 {
  font-size: 32rpx;
  font-weight: 600;
  color: #fff;
  letter-spacing: 0.5rpx;
  position: relative;
  z-index: 1;
}
.deletion-notice.data-v-018cdf56 {
  display: block;
  margin-top: 30rpx;
  padding: 24rpx;
  background: #fff8e6;
  border-radius: 16rpx;
  font-size: 26rpx;
  color: #e6a23c;
  line-height: 1.6;
  border-left: 6rpx solid #ffd43b;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}
button.data-v-018cdf56 {
  background: transparent;
  padding: 0;
  margin: 0;
  line-height: 1;
  border-radius: 0;
}
button.data-v-018cdf56::after {
  border: none;
}
