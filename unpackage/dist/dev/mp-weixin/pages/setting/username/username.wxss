  display: flex;
  flex-direction: column;
}
.form-wrapper.data-v-ce7f77cb {
  background: #fff;
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.04);
}
.input-group.data-v-ce7f77cb {
  margin-bottom: 40rpx;
}
.input-item.data-v-ce7f77cb {
  margin-bottom: 48rpx;
  position: relative;
}
.input-item.data-v-ce7f77cb:last-child {
  margin-bottom: 0;
}
.input.data-v-ce7f77cb {
  height: 100rpx;
  padding: 0 80rpx 0 40rpx;
  font-size: 32rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 16rpx;
  transition: all 0.3s ease;
}
.input.data-v-ce7f77cb:focus {
  border-color: #65C3D6;
  box-shadow: 0 4rpx 12rpx rgba(101, 195, 214, 0.2);
}
.input:focus + .floating-label.data-v-ce7f77cb {
  transform: translateY(-220%);
  font-size: 26rpx;
  color: #65C3D6;
}
.floating-label.data-v-ce7f77cb {
  position: absolute;
  left: 40rpx;
  top: 60%;
  transform: translateY(-50%);
  color: #999;
  font-size: 32rpx;
  pointer-events: none;
  transition: all 0.3s ease;
  background: #fff;
}
.input:not(:placeholder-shown) + .floating-label.data-v-ce7f77cb,
.input:focus + .floating-label.data-v-ce7f77cb {
  transform: translateY(-220%);
  font-size: 26rpx;
}
.input-icon.data-v-ce7f77cb {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
}
.password-strength.data-v-ce7f77cb {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin: 32rpx 0;
}
.password-strength .strength-bar.data-v-ce7f77cb {
  height: 8rpx;
  flex: 1;
  background: #eee;
  border-radius: 4rpx;
  transition: all 0.3s ease;
}
.password-strength .strength-bar.weak.data-v-ce7f77cb {
  background: #ff5252;
}
.password-strength .strength-bar.medium.data-v-ce7f77cb {
  background: #ffb300;
}
.password-strength .strength-bar.strong.data-v-ce7f77cb {
  background: #4CAF50;
}
.password-strength .strength-text.data-v-ce7f77cb {
  font-size: 26rpx;
  color: #666;
}
.submit-btn.data-v-ce7f77cb {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #65C3D6 0%, #4CA1AF 100%);
  color: #fff;
  font-size: 32rpx;
  border-radius: 16rpx;
  border: none;
  position: relative;
  overflow: hidden;
  transition: all 0.3s ease;
  line-height: 96rpx;
}
.submit-btn.data-v-ce7f77cb:active {
  transform: scale(0.98);
  opacity: 0.9;
