.version-update-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx;
  width: 600rpx;
  box-sizing: border-box;
}
.version-update-container .update-icon {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 20rpx;
}
.version-update-container .update-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  text-align: center;
}
.version-update-container .update-content {
  width: 100%;
  max-height: 300rpx;
  margin-bottom: 40rpx;
  border-radius: 12rpx;
  background-color: #f8f9fa;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}
.version-update-container .update-content .update-section {
  margin-bottom: 40rpx;
}
.version-update-container .update-content .update-section .section-title {
  font-size: 26rpx;
  font-weight: bold;
  color: #4a90e2;
  margin-bottom: 10rpx;
  position: relative;
  padding-left: 20rpx;
}
.version-update-container .update-content .update-section .section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 26rpx;
  background: linear-gradient(to bottom, #4facfe, #00f2fe);
  border-radius: 4rpx;
}
.version-update-container .update-content .update-section .section-content {
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
  padding-left: 20rpx;
}
.version-update-container .update-buttons {
  display: flex;
  justify-content: space-between;
  width: 100%;
  gap: 20rpx;
}
.version-update-container .update-buttons .update-btn {
  flex: 1;
  height: 60rpx;
  border-radius: 40rpx;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
  position: relative;
  overflow: hidden;
}
.version-update-container .update-buttons .update-btn::after {
  border: none;
}
.version-update-container .update-buttons .update-btn.ignore {
  background-color: #f5f5f5;
  color: #666;
  border: 1rpx solid #e5e5e5;
}
.version-update-container .update-buttons .update-btn.ignore:active {
  background-color: #e5e5e5;
  transform: translateY(2rpx);
}
.version-update-container .update-buttons .update-btn.confirm {
  background: linear-gradient(135deg, #a6e9f7, #1ed1e1);
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(30, 209, 225, 0.4);
}
.version-update-container .update-buttons .update-btn.confirm:active {
  opacity: 0.9;
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 6rpx rgba(30, 209, 225, 0.4);
}
.toast-message {
  position: fixed;
  bottom: 150rpx;
  left: 50%;
  transform: translateX(-50%);
  background-color: rgba(0, 0, 0, 0.7);
  color: white;
  padding: 20rpx 40rpx;
  border-radius: 50rpx;
  font-size: 26rpx;
  z-index: 9999;
  animation: fadeInOut 2s forwards;
}
@keyframes fadeInOut {
0% {
    opacity: 0;
}
20% {
    opacity: 1;
}
80% {
    opacity: 1;
}
100% {
    opacity: 0;
}
}
@keyframes shine {
0% {
    transform: translateX(-100%) rotate(30deg);
}
100% {
    transform: translateX(100%) rotate(30deg);
}
}
