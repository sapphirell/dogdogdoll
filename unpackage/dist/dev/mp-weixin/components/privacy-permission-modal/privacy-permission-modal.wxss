.privacy-container {
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  width: 85vw;
  box-sizing: border-box;
}
.privacy-container .header {
  display: flex;
  align-items: center;
  padding-bottom: 16rpx;
  border-bottom: 1px solid #f0f0f0;
  margin-bottom: 24rpx;
}
.privacy-container .header .logo {
  width: 80rpx;
  height: 80rpx;
  border-radius: 16rpx;
  margin-right: 20rpx;
}
.privacy-container .header .title {
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
}
.privacy-container .content {
  padding: 0 10rpx;
}
.privacy-container .content .desc {
  font-size: 25rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 30rpx;
  display: block;
}
.privacy-container .content .policy-item {
  display: flex;
  align-items: center;
  padding: 24rpx 20rpx;
  background-color: #f9f9f9;
  border-radius: 12rpx;
  margin-bottom: 24rpx;
}
.privacy-container .content .policy-item .policy-text {
  flex: 1;
  font-size: 25rpx;
  color: #80afff;
  margin-left: 16rpx;
}
.privacy-container .footer {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}
.privacy-container .footer .btn {
  flex: 1;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 24rpx;
  border-radius: 40rpx;
  margin: 0 10rpx;
  border: none;
}
.privacy-container .footer .btn::after {
  border: none;
}
.privacy-container .footer .btn.refuse {
  background-color: #f8f8f8;
  color: #666;
}
.privacy-container .footer .btn.agree {
  background-color: #80afff;
  color: #fff;
}
