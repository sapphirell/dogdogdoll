.search_tab {
  box-sizing: border-box;
  display: flex;
  align-items: center;
  background: #fff;
  border-radius: 10px;
}
.search_tab image {
  position: relative;
  margin-left: 5px;
}
.search_tab .common_search_input {
  display: inline-block;
  padding: 10px 15px;
  width: calc(100% - 85px);
  top: 2rpx;
  position: relative;
  font-size: 22rpx;
}
.search_results {
  margin-top: 10px;
  padding: 10px;
  background-color: #f8f8f8;
  border-radius: 5px;
  position: absolute;
  z-index: 12;
  box-shadow: 0 0 15px #0000002b;
  max-height: 400rpx;
  font-size: 22rpx;
}
.search_results .result_item {
  font-size: 22rpx;
  padding: 15px 0;
  cursor: pointer;
  color: #333;
  border-bottom: 1px solid #ececec;
}
.search_results .result_item:last-child {
  border-bottom: none;
}
.search_results .result_item:hover {
  color: #007aff;
}
