.server-selector-trigger {
  display: flex;
  align-items: center;
  padding: 10rpx 20rpx;
  background-color: #f0f4ff;
  border-radius: 50rpx;
  font-size: 28rpx;
  color: #5db7ff;
  position: fixed;
  bottom: 160rpx;
  right: 30rpx;
  z-index: 99;
  box-shadow: 0 4rpx 15rpx rgba(93, 183, 255, 0.3);
}
.server-selector-trigger text {
  margin-left: 10rpx;
  font-weight: 500;
}
.server-modal-content {
  padding: 30rpx;
  width: 500rpx;
}
.server-modal-content .modal-header {
  margin-bottom: 30rpx;
}
.server-modal-content .modal-header .title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}
.server-modal-content .modal-header .subtitle {
  font-size: 26rpx;
  color: #666;
}
.server-modal-content .server-list .server-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 25rpx 30rpx;
  margin-bottom: 20rpx;
  background-color: #f8faff;
  border-radius: 16rpx;
  border: 2rpx solid #e8ecff;
  transition: all 0.3s ease;
}
.server-modal-content .server-list .server-item.active {
  background-color: #e6f3ff;
  border-color: #5db7ff;
  box-shadow: 0 4rpx 10rpx rgba(93, 183, 255, 0.2);
}
.server-modal-content .server-list .server-item.loading {
  opacity: 0.8;
}
.server-modal-content .server-list .server-item .server-info {
  flex: 1;
  /* 移除了URL样式 */
}
.server-modal-content .server-list .server-item .server-info .name {
  display: block;
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}
.server-modal-content .server-list .server-item .ping-info {
  font-size: 28rpx;
  font-weight: 500;
  min-width: 120rpx;
  text-align: right;
}
.server-modal-content .server-list .server-item .ping-info .ping-value {
  color: #5db7ff;
}
.server-modal-content .server-list .server-item .ping-info .ping-error {
  color: #ff6b6b;
}
.server-modal-content .server-list .server-item .ping-info .spinner {
  animation: rotate 1.5s linear infinite;
}
@keyframes rotate {
from {
    transform: rotate(0deg);
}
to {
    transform: rotate(360deg);
}
}
